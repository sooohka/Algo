{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python",
      "type": "shell",
      "command": "python3",
      "args": [
        "${fileBasename}"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "env": {
          "PYTHONIOENCODING": "UTF-8"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Node.js",
      "type": "shell",
      "command": "node ${fileBasename}",
      "args": [],
      "options": {
        "cwd": "${fileDirname}",
        "env": {
          "PYTHONIOENCODING": "UTF-8"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
